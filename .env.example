# Example .env file for Multi-Agent AI System v2.0
# Copy this to .env and fill in your values

# ====================
# APPLICATION
# ====================
DEBUG=false
APP_NAME="Multi-Agent AI System"

# ====================
# DATABASE
# ====================
# PostgreSQL database credentials
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=multiagent_ai
DB_USERNAME=postgres
DB_PASSWORD=postgres

# Alternative: Use full connection string (overrides above if set)
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/multiagent_ai

# ====================
# GOOGLE OAUTH
# ====================
# Get credentials from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# ====================
# JWT AUTHENTICATION
# ====================
# Generate a secure random key: openssl rand -hex 32
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ====================
# LLM PROVIDERS
# ====================
# Required: At least one provider API key

# OpenAI (https://platform.openai.com/api-keys)
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic Claude (https://console.anthropic.com/)
# ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Google Gemini (https://makersuite.google.com/app/apikey)
# GOOGLE_API_KEY=your-google-api-key-here

# ====================
# LLM CONFIGURATION
# ====================
# Format: provider:model or just provider (uses default model)
# Supported providers: openai, anthropic, google
#
# OpenAI models: gpt-4o, gpt-4o-mini, gpt-4-turbo, gpt-4, gpt-3.5-turbo
# Anthropic models: claude-3-5-sonnet-20241022, claude-3-5-haiku-20241022, claude-3-opus-20240229
# Google models: gemini-1.5-pro, gemini-1.5-flash, gemini-1.0-pro
#
# See docs/LLM_CONFIGURATION.md for detailed guide

# Default provider for all agents (optional, defaults to openai)
DEFAULT_LLM_PROVIDER=openai

# Agent-specific LLM configuration
ORCHESTRATOR_LLM=openai:gpt-4o-mini
RESEARCH_LLM=openai:gpt-4o-mini
WRITING_LLM=openai:gpt-4o-mini
CODE_LLM=openai:gpt-4o-mini
GENERAL_LLM=openai:gpt-4o-mini
AGGREGATOR_LLM=openai:gpt-4o-mini

# ====================
# TEMPERATURE SETTINGS
# ====================
# Control randomness in responses (0-2, lower = more deterministic)
ORCHESTRATOR_TEMPERATURE=0
RESEARCH_TEMPERATURE=0.3
WRITING_TEMPERATURE=0.7
CODE_TEMPERATURE=0.2
AGGREGATOR_TEMPERATURE=0.5

# ====================
# SYSTEM CONFIGURATION
# ====================
MAX_RETRIES=3
TIMEOUT=120
RATE_LIMIT_PER_MINUTE=60

# ====================
# CORS (Frontend URLs)
# ====================
# Add your frontend URLs here (comma-separated)
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ====================
# AUTOMEM (Memory Service)
# ====================
AUTOMEM_URL=http://localhost:8001
AUTOMEM_API_TOKEN=your-automem-api-token-here

# ====================
# LOGGING
# ====================
LOG_LEVEL=INFO
VERBOSE=false
